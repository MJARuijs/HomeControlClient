<resources>

    <style name="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceStyle</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonColors</item>
        <item name="android:toolbarStyle">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainMenuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:toolbarStyle">@color/colorPrimary</item>
        <item name="preferenceTheme">@style/PreferenceStyle</item>
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Device_Settings_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/darkNotificationBar</item>
        <item name="colorPrimary">@color/darkPrimaryDark</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="android:itemBackground">@color/darkPrimary</item>
        <item name="itemIconTint">@color/darkPrimary</item>
        <item name="itemTextColor">@drawable/navigation_bar_selector</item>
    </style>

    <style name="Alert_Dialog_Dark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/darkPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="PreferenceStyle" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/CustomPreferenceCategory</item>
        <item name="switchPreferenceCompatStyle">@style/CustomPreferenceSwitch</item>
        <item name="switchPreferenceStyle">@style/CustomPreferenceSwitch</item>
    </style>

    <style name="CustomPreferenceCategory" parent="@style/Preference.Category">
        <item name="android:layout">@layout/custom_preference_category</item>
    </style>

    <style name="CustomPreferenceCategoryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomPreferenceSwitch" parent="@style/Preference.SwitchPreference">
        <!--<item name="android:layout">@layout/custom_preference_category</item>-->
        <item name="android:color">@color/buttonColors</item>
        <item name="android:colorAccent">@color/buttonColors</item>
        <item name="android:colorBackground">@color/buttonColors</item>
    </style>
</resources>

