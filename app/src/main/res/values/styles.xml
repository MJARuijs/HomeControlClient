<resources>

    <style name="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonColors</item>
        <item name="android:toolbarStyle">@color/colorPrimary</item>
    </style>

    <style name="MainMenuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonColors</item>
        <item name="android:toolbarStyle">@color/colorPrimary</item>
    </style>

    <style name="Device_Settings_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/darkNotificationBar</item>
        <item name="colorPrimary">@color/darkPrimaryDark</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="android:itemBackground">@color/darkPrimary</item>
        <item name="itemIconTint">@color/darkPrimary</item>
        <item name="itemTextColor">@drawable/navigation_bar_selector</item>
    </style>

    <style name="Alert_Dialog_Dark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/darkPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>

